{
  "openapi": "3.0.0",
  "info": {
    "title": "Drive Partagé Reader",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://gpt-drive-backend.onrender.com"
    }
  ],
  "paths": {
    "/folder_files": {
      "get": {
        "operationId": "listSharedDriveFolderFiles",
        "summary": "Liste les fichiers d'un dossier dans un Drive partagé",
        "parameters": [
          {
            "name": "refresh_token",
            "in": "query",
            "required": true,
            "description": "Refresh token OAuth 2.0 Google Drive",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des fichiers récupérés depuis le dossier partagé",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "files": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "name": { "type": "string" },
                          "mimeType": { "type": "string" },
                          "driveId": { "type": "string" }
                        },
                        "required": ["id", "name", "mimeType"]
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requête invalide ou token incorrect"
          },
          "401": {
            "description": "Token d'accès manquant ou invalide"
          }
        }
      }
    }
  }
}
